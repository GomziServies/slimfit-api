{
	"liveServer.settings.port": 8081,
	"cSpell.customDictionaries": {
		"custom-dictionary-workspace": {
			"name": "custom-dictionary-workspace",
			"path": "${workspaceFolder:fg-group-apis}/.cspell/custom-dictionary-workspace.txt",
			"addWords": true,
			"scope": "workspace"
		}
	},
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"eslint.format.enable": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	},
	"prettier.requireConfig": true,
	"prettier.configPath": ".prettierrc.json",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX", "[ ]", "[x]", "TODO[]", "TODO[x]", "BUG[]", "BUG[x]", "FIXME[]", "FIXME[x]", "REFACTOR", "REFACTOR[]", "REFACTOR[x]"],
	"todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+\\.))\\s*($TAGS)\\s*(@\\w+)?",
	"todo-tree.regex.subTagRegex": "(@\\w+)",
	"todo-tree.highlights.customHighlight": {
		"BUG": {
			"icon": "bug"
		},
		"HACK": {
			"icon": "tools"
		},
		"FIXME": {
			"icon": "flame"
		},
		"XXX": {
			"icon": "x"
		},
		"[ ]": {
			"icon": "issue-draft"
		},
		"[x]": {
			"icon": "issue-closed"
		},
		"TODO[]": {
			"icon": "circle",
			"foreground": "#ff8080", // Lighter red
			"iconColour": "#ff8080",
			"type": "text-and-comment"
		},
		"TODO[x]": {
			"icon": "check-circle-fill",
			"foreground": "#90EE90", // Lighter green
			"iconColour": "#90EE90",
			"type": "text-and-comment"
		},
		"BUG[]": {
			"icon": "bug",
			"foreground": "#ff8080",
			"iconColour": "#ff8080",
			"type": "text-and-comment"
		},
		"BUG[x]": {
			"icon": "bug",
			"foreground": "#90EE90",
			"iconColour": "#90EE90",
			"type": "text-and-comment"
		},
		"FIXME[]": {
			"icon": "flame",
			"foreground": "#ff8080",
			"iconColour": "#ff8080",
			"type": "text-and-comment"
		},
		"FIXME[x]": {
			"icon": "flame",
			"foreground": "#90EE90",
			"iconColour": "#90EE90",
			"type": "text-and-comment"
		},
		"REFACTOR": {
			"icon": "sync"
		},
		"REFACTOR[]": {
			"icon": "sync",
			"foreground": "#ff8080",
			"iconColour": "#ff8080",
			"type": "text-and-comment"
		},
		"REFACTOR[x]": {
			"icon": "sync",
			"foreground": "#90EE90",
			"iconColour": "#90EE90",
			"type": "text-and-comment"
		}
	}
}
